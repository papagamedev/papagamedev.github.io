<!-- Html Elements for Search -->
<div id="search-container">
  <input style="margin:auto;font-size:15px;" type="text" id="search-input" placeholder="{{include.placeholder}}">
  <div class="post-list" id="results-container"></div>
</div>

<!-- Script pointing to search-script.js -->
<script src="/js/simple-jekyll-search.min.js" type="text/javascript"></script>

<!-- Configuration -->
<script>
SimpleJekyllSearch({
  searchInput: document.getElementById('search-input'),
  resultsContainer: document.getElementById('results-container'),
  json: '/search-{{page.lang}}.json',
  noResultsText: '{{include.noresults}}',
  limit: 10,
  fuzzy: false,
  searchResultTemplate: '<div class="post-summary"><div class="post-summary-item"><a href="{url}"><img src="/images/{image}" class="post-summary-img" alt="{title}" /></a></div><div class="post-summary-item"><a class="post-link" href="{url}">{title}</a> </div><div class="post-summary-item"><span class="post-meta">{date}</span></div><div class="post-summary-description">{description}</div>  </div>'
})
</script>
