<!-- Html Elements for Search -->
<div id="search-container">
  <input style="margin:auto;font-size:15px;" type="text" id="search-input" placeholder="{{include.placeholder}}">
  <div class="post-list" id="results-container"></div>
</div>

<!-- Script pointing to search-script.js -->
<script src="/js/simple-jekyll-search.min.js" type="text/javascript"></script>

<!-- Configuration -->
<script>
SimpleJekyllSearch({
  searchInput: document.getElementById('search-input'),
  resultsContainer: document.getElementById('results-container'),
  json: '/search-{{page.lang}}.json',
  noResultsText: '{{include.noresults}}',
  limit: 10,
  fuzzy: false,
  searchResultTemplate: '<div style="display:inline-block;min-width:300px;width:40%;margin:2%;vertical-align: top;"><div style="padding:5px"><a href="{url}"><img src="/images/{image}" class="post-summary-img" style="height:200px;object-fit:cover;margin-left:auto;margin-right:auto;display:block;" alt="{title}" /></a></div><div style="padding:5px"><a class="post-link" href="{url}">{title}</a> </div><div style="padding:5px"><span class="post-meta">{date}</span></div><div style="padding:15px">{description}</div>  </div>'
})
</script>
